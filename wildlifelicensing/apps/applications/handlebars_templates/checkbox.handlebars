<div class="form-group">
    <div class="form-check">
        <input class="form-check-input" name="{{name}}" type="checkbox" id="{{name}}_preview" {{#if required}}data-parsley-required{{/if}} {{#if value}}checked{{/if}}>
        <label class="form-check-label" for="{{name}}_preview">{{label}}</label>
    </div>
    {{#if help_text}}
        <p class="help-block">{{ help_text }}</p>
    {{/if}}
</div>
